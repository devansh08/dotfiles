# Maintainer: Devansh Sharma <devansh.sharma@gmail.com>
pkgname=trasker-bin
pkgver=1.1.0
pkgrel=1
pkgdesc="Simple project level file based task tracker"
arch=('x86_64')
url="https://github.com/devansh08/trasker"
license=('MIT')
depends=()
source=("https://github.com/devansh08/trasker/releases/download/v${pkgver}/trasker-linux-amd64")
sha256sums=('SKIP')

pkgver() {
  curl -s "https://api.github.com/repos/devansh08/trasker/releases/latest" |
    grep '"tag_name"' |
    sed -E 's/.*"([^"]+)".*/\1/' |
    sed 's/^v//'
}

package() {
  install -Dm755 trasker-linux-amd64 "$pkgdir/usr/bin/trasker"
}
